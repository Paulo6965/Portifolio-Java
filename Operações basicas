import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
	    
		Scanner scanner = new Scanner(System.in);
		
		System.out.print("Digite o primeiro numero: ");
		float numero1 = scanner.nextInt();
		
		System.out.print("Digite o segundo numero: ");
		float numero2 = scanner.nextInt();
		
		float soma = numero1 + numero2;
		
		float subtração = numero1 - numero2;
		
		float multiplicação = numero1 * numero2;
		
		float divisão = numero1 / numero2;
		
		System.out.println("O resultado da soma e : " + soma + "!");
		System.out.println("O resultado da subtração  e : " + subtração + "!");
		System.out.println("O resultado da multiplicação e : " + multiplicação + "!");
		System.out.println("O resultado da divisão e : " + divisão + "!");
		
		scanner.close();
	}
}
